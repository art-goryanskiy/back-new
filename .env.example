# Домен для SSL (Let's Encrypt) и Nginx
DOMAIN=www.new.standart82.ru
# Email для уведомлений Let's Encrypt
CERTBOT_EMAIL=info@standart82.ru

# Database (в Docker используйте mongo:27017)
MONGODB_URI=mongodb://mongo:27017/education-center?replicaSet=rs0

# Redis (в Docker используйте redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# JWT
JWT_SECRET=change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server (внутри контейнера всегда 3000)
PORT=3000
NODE_ENV=production
# CORS: через запятую (если не задано — разрешены localhost:3000, 5173, 4173)
# CORS_ORIGIN=http://localhost:5173,https://www.new.standart82.ru

# Admin Initialization; также используется для копии писем по заявкам (BCC)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=secure-password

# Яндекс Object Storage
YANDEX_STORAGE_ACCESS_KEY=
YANDEX_STORAGE_SECRET_KEY=
YANDEX_STORAGE_BUCKET=
YANDEX_STORAGE_REGION=ru-central1
YANDEX_STORAGE_ENDPOINT=https://storage.yandexcloud.net

# SMTP
SMTP_HOST=
SMTP_PORT=465
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Dadata
DADATA_TOKEN=

# T-Bank T-API (только выставление счёта)
TBANK_API_KEY=
TBANK_SBP_USE_SANDBOX=false
TBANK_SBP_ACCOUNT_NUMBER=
TBANK_SBP_VAT=22
TBANK_INVOICE_DUE_DAYS=7

# Фронтенд: базовый URL для редиректов после оплаты (успех/ошибка)
FRONTEND_BASE_URL=https://www.new.standart82.ru
# URL фронта для ссылок в письмах (подтверждение email, сброс пароля). Если не задан — используется http://localhost:3000
FRONT_URL=https://www.new.standart82.ru

# Бэкенд: публичный URL API (для NotificationURL — T-Bank вызывает при оплате; тот домен, где висят /payment/tbank-eacq/notification и /graphql)
BACKEND_PUBLIC_URL=https://www.new.standart82.ru

# T-Bank EACQ (оплата картой: Init → paymentUrl/iframe)
TBANK_EACQ_TERMINAL_KEY=1770038052022DEMO
TBANK_EACQ_PASSWORD=
TBANK_EACQ_USE_TEST=true
# Редирект после оплаты: если не заданы — используются FRONTEND_BASE_URL/orders/{orderId}/success и .../fail
# Либо укажите URL бэкенда (тогда редирект пойдёт через GET /orders/:orderId/payment-success и payment-fail)
# TBANK_EACQ_SUCCESS_URL=https://api.standart82.ru/orders/{orderId}/payment-success
# TBANK_EACQ_FAIL_URL=https://api.standart82.ru/orders/{orderId}/payment-fail


# VK API (новости со стены сообщества)
VK_ACCESS_TOKEN=
VK_GROUP_ID=
# VK_API_VERSION=5.199

# Чек 54-ФЗ в Init (онлайн-касса). По умолчанию: УСН доходы, без НДС.
# TBANK_RECEIPT_TAXATION=usn_income
# TBANK_RECEIPT_ITEM_TAX=none

