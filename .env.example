# Домен для SSL (Let's Encrypt) и Nginx
DOMAIN=www.new.standart82.ru
# Email для уведомлений Let's Encrypt
CERTBOT_EMAIL=admin@standart82.ru

# Database (в Docker используйте mongo:27017)
MONGODB_URI=mongodb://mongo:27017/education-center?replicaSet=rs0

# Redis (в Docker используйте redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# JWT
JWT_SECRET=change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server (внутри контейнера всегда 3000)
PORT=3000
NODE_ENV=production

# Admin Initialization
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=secure-password

# Яндекс Object Storage
YANDEX_STORAGE_ACCESS_KEY=
YANDEX_STORAGE_SECRET_KEY=
YANDEX_STORAGE_BUCKET=
YANDEX_STORAGE_REGION=ru-central1
YANDEX_STORAGE_ENDPOINT=https://storage.yandexcloud.net

# SMTP
SMTP_HOST=
SMTP_PORT=465
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Dadata
DADATA_TOKEN=

# T-Bank T-API
TBANK_API_KEY=
TBANK_SBP_USE_SANDBOX=false
TBANK_SBP_ACCOUNT_NUMBER=
TBANK_SBP_REDIRECT_BASE_URL=https://www.new.standart82.ru
TBANK_SBP_LINK_TTL_DAYS=30
TBANK_SBP_VAT=22
TBANK_INVOICE_DUE_DAYS=7
